<table>
	<tr>
		<td> Cliente </td>
		<td> <%= select_tag :cliente_id , options_for_select(@cliente.map { |cli| [cli.nome , cli.id]  }), :include_blank => true %> </td>
	</tr>
	<tr>
		<td> Tipo de contrato </td>
		<td> <%= select_tag :cliente_id , options_for_select(@tp_contrato.map { |tc| [tc.nome , tc.id]  }), :include_blank => true %> </td>
	</tr>
	<tr>
		<td> Duração do contrato </td>
		<td> <%= f.date_field( :validade, :start_year => Date.current.year, :end_year=> 2030, :order => [:day, :month, :year]) %></td>
	</tr>
	<tr>
		<td> Contrato arquivo </td>
		<td> <%= f.file_field :contrato %> </td>
	</tr>
</table>
